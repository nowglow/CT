@model IEnumerable<CT.Model.UserInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">后台管理</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">用户</a></li>
            <li><i class="fa fa-table"></i>用户管理</li>
            @*<li><i class="fa fa-th-list"></i>删除</li>*@
        </ol>
    </div>
</div>
<section class="panel">
    <h2>Index</h2>

    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                头像
            </th>
            <th>
                用户名
            </th>

            <th>
                邮箱
            </th>
            <th>
                电话
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo_Img)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo_Phone)
                </td>
                <td>
                   
                    @Html.ActionLink("详情", "Details", new { id = item.UserInfo_ID }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.UserInfo_ID })
                </td>
            </tr>
        }
    </table>
    </section>