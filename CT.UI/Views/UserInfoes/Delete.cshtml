@model CT.Model.UserInfo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">后台管理</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">用户</a></li>
            <li><i class="fa fa-table"></i>用户管理</li>
            <li><i class="fa fa-th-list"></i>详情</li>
        </ol>
    </div>
</div>
<section class="panel">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>UserInfo</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                用户名
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserInfo_Name)
            </dd>
            <dt>
                头像
            </dt>

            <dd>
                <img src="@Model.UserInfo_Img" width="150" height="200" />
            </dd>

            <dt>
                密码
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserInfo_Password)
            </dd>

            <dt>
                邮箱
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserInfo_Email)
            </dd>

            <dt>
                电话
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserInfo_Phone)
            </dd>

        </dl>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回", "Index")
        </div>
}
    </div>
    </section>