    <link href="~/Content/ShopDemo/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/ShopDemo/css/owl.carousel.css" rel="stylesheet" />

    <link href="~/Content/ShopDemo/css/responsive.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/ShopDemo/css/style.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/ShopDemo/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/ShopDemo/css/style.css">
    <link rel="stylesheet" href="~/Content/ShopDemo/css/responsive.css">
    <link rel="stylesheet" href="~/Content/ShopDemo/css/font-awesome.min.css">

</head>
<body>
    @*标志和购物车*@
<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo">

                    <h1><img src="~/Content/ShopDemo/img/logo.png" width="176" height="64"></h1>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="shopping-item">
                    @Html.ActionLink("购物车", "Shop_Shoppingcart", "Shop")<i class="fa fa-shopping-cart"></i> <span class="product-count">5</span>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End site branding area -->
@RenderBody()
@*尾部*@
<div class="footer-top-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="footer-about-us">
                    <h2><span>U享商城</span></h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                    <div class="footer-social">
                        <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-youtube"></i></a>
                        <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="footer-menu">
                    <h2 class="footer-wid-title">导航菜单 </h2>
                    <ul>
                        <li><a href="#">My account</a></li>
                        <li><a href="#">Order history</a></li>
                        <li><a href="#">Wishlist</a></li>
                        <li><a href="#">Vendor contact</a></li>
                        <li><a href="#">Front page</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="footer-menu">
                    <h2 class="footer-wid-title">目录</h2>
                    <ul>
                        <li><a href="#">手机</a></li>
                        <li><a href="#">平板</a></li>
                        <li>笔记本</li>
                        <li><a href="#">精选配件</a><a href="#"></a></li>

                    </ul>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="footer-newsletter">
                    <h2 class="footer-wid-title">Newsletter</h2>
                    <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                    <div class="newsletter-form">
                        <form action="#">
                            <input type="email" placeholder="Type your email">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
