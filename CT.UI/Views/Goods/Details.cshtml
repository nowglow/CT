@model CT.UI.Models.GoodsModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">后台管理</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">商品信息</a></li>
            <li><i class="fa fa-table"></i>商品信息管理</li>
            <li><i class="fa fa-th-list"></i>信息详情</li>
        </ol>
    </div>
</div>
<section class="panel">
    <div>

        <hr />
        <p>
            @*@Html.ActionLink("修改", "Edit", new { id = Model.Info_ID }) |*@
            @Html.ActionLink("返回主页", "Index")
        </p>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                商品名称
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Goods_Name)
            </dd>
            <dt>
                商品价格
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Goods_Price)
            </dd>
            <dt>
                一级分类
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type_Name)
            </dd>
            <dt>
                二级分类
            </dt>
            <dd>
                @if (Model.Border_Name != null)
                {
                    @Html.DisplayFor(model => model.Border_Name)
                }
                else
                {
                    @Html.Display("无")
                }
            </dd>

            <dt>
                商品图片
            </dt>
            <dd>
                <img src="@Model.Goods_Img" style="height:400px;width:650px" />
            </dd>

            <dt>
                商品介绍
            </dt>
            <dd>
                @Html.Raw(Model.Goods_Content)
            </dd>
        </dl>
    </div>
    <br />
    <br />
</section>
