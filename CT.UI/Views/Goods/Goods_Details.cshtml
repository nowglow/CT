@model CT.UI.Models.GoodsModel
@{
    Layout = "~/Views/Shared/Shop.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Goods_Details</title>
</head>
<body>
    <div>
        <div class="mainmenu-area">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="=active">@Html.ActionLink("首页", "Shop_Index", "Shop")</li>
                            <li>@Html.ActionLink("手机", "Shop_Telephone", "Shop")</li>
                            <li>@Html.ActionLink("平板", "Shop_tablet", "Shop")</li>
                            <li>@Html.ActionLink("笔记本电脑", "Shop_laptop", "Shop")</li>
                            <li>@Html.ActionLink("精选配件", "Shop_Parts", "Shop")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="single-product-area">
            <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        

                        <div class="single-sidebar">
                            <h2 class="sidebar-title">产品</h2>
                            @foreach (var item in ViewBag.goodsphone)
                            {
                                <div class="thubmnail-recent">
                                    <img src="@item.Goods_Img" class="recent-thumb" alt="">
                                    <h2><a href="">@item.Goods_Name</a></h2>
                                    <div class="product-sidebar-price">
                                        <ins>$@item.Goods_Price</ins> 
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="product-content-right">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="product-images">
                                        <div class="product-main-img">
                                            <img src="@Model.Goods_Img" alt="">
                                        </div>
                                        
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="product-inner">
                                        <h2 class="product-name">@Model.Goods_Name</h2>
                                        <div class="product-inner-price">
                                            <ins>$@Model.Goods_Price</ins> 
                                        </div>

                                        <form action="" class="cart">
                                            <div class="quantity">
                                                <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                            </div>
                                            <button class="add_to_cart_button" type="submit">加入购物车</button>
                                        </form>

                                       

                                        <div role="tabpanel">
                                            <ul class="product-tab" role="tablist">
                                                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">商品详情</a></li>
                                               
                                            </ul>
                                            <div class="tab-content">
                                                <div role="tabpanel" class="tab-pane fade in active" id="home">
                                                    <h2>商品详情</h2>
                                                    @Model.Goods_Content

                                                </div>
                                                @*<div role="tabpanel" class="tab-pane fade" id="profile">
                                                    <h2>Reviews</h2>
                                                    <div class="submit-review">
                                                        <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                        <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                        <div class="rating-chooser">
                                                            <p>Your rating</p>

                                                            <div class="rating-wrap-post">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                            </div>
                                                        </div>
                                                        <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                        <p><input type="submit" value="Submit"></p>
                                                    </div>
                                                </div>*@
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                            <div class="related-products-wrapper">
                                <h2 class="related-products-title"></h2>
                                <div class="related-products-carousel">
                                    @foreach (var it in ViewBag.goodsother)
                                    {
                                        <div class="single-product">
                                            <div class="product-f-image">
                                                <img src="@Model.Goods_Img" alt="">
                                                <div class="product-hover">
                                                    <a href="" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> 加入购物车</a>
                                                    <a href="@Url.Action("Goods_Details","Goods",new { goodsid=it.Goods_ID})" class="view-details-link"><i class="fa fa-link"></i>查看详情</a>
                                                </div>
                                            </div>

                                            <h2><a href="">@Model.Goods_Name</a></h2>

                                            <div class="product-carousel-price">
                                                <ins>$@Model.Goods_Price</ins> 
                                            </div>
                                        </div>
                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
