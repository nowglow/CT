@using CT.UI.Models
@model CT.Common.PagingHelper<CT.UI.Models.VideoModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">后台管理</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">视频评测</a></li>
            <li><i class="fa fa-table"></i>评测管理</li>
            @*<li><i class="fa fa-th-list"></i></li>*@
        </ol>
    </div>
</div>
<section class="panel">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>视频链接</th>
                <th>封面</th>
                <th>时间</th>
                <th>分类</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GetPagingData())
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_Img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video_Class)
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit", new { id = item.Video_ID }) |
                        @Html.ActionLink("删除", "Delete", new { id = item.Video_ID })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                @if (Model.HasPrev)
                {
                    <td><a href="@Url.Action("Index", "Video", new { pageIndex = Model.PageIndex - 1 })">上一页</a></td>
                }
                else
                {
                    <td><em style="color:Gray">上一页</em></td>
                }
                @if (Model.HasNext)
                {
                    <td><a href="@Url.Action("Index", "Video", new { pageIndex = Model.PageIndex + 1 })">下一页</a></td>
                }
                else
                {
                    <td><em style="color:Gray">下一页</em></td>
                }
            </tr>
        </tfoot>
    </table>
</section>

