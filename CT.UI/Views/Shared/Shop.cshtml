<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->

    <link href="~/Content/ShopDemo/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/ShopDemo/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/ShopDemo/css/owl.carousel.css" rel="stylesheet" />

    <link href="~/Content/ShopDemo/css/responsive.css" rel="stylesheet" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/ShopDemo/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/ShopDemo/css/style.css">
    <link rel="stylesheet" href="~/Content/ShopDemo/css/responsive.css">
    

</head>
<body>
    @*标志和购物车*@
<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo">

                    <h1><a href="@Url.Action("Info_Index","Info")"><img src="~/Content/ShopDemo/img/logo.png" width="176" height="64"></a></h1>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="shopping-item">
                    @Html.ActionLink("购物车", "Shop_Shoppingcart", "Shop")<i class="fa fa-shopping-cart"></i> <span class="product-count">5</span>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End site branding area -->
@RenderBody()
@*尾部*@
<div class="footer-top-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="footer-about-us">
                    <h2><span>U享商城</span></h2>
                    
                </div>
            </div>


            <div class="col-md-3 col-sm-6">
                <div class="footer-menu">
                    <h2 class="footer-wid-title">目录</h2>
                    <ul>
                        <li><a href="#">手机</a></li>
                        <li><a href="#">平板</a></li>
                        <li>笔记本</li>
                        <li><a href="#">精选配件</a><a href="#"></a></li>

                    </ul>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="footer-newsletter">
                    <h2 class="footer-wid-title">Newsletter</h2>
                    <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                    <div class="newsletter-form">
                        <form action="#">
                            <input type="email" placeholder="Type your email">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @*JS特效*@
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Content/ShopDemo/js/owl.carousel.min.js"></script>
    <script src="~/Content/ShopDemo/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Content/ShopDemo/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Content/ShopDemo/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="~/Content/ShopDemo/js/bxslider.min.js"></script>
    <script type="text/javascript" src="~/Content/ShopDemo/js/script.slider.js"></script>
    
</body>
</html>
