@model CT.UI.Models.InfoModel

@{
                ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*JS验证*@
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
